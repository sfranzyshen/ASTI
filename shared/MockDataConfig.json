{
  "version": "1.0.0",
  "description": "Unified mock data configuration for cross-platform Arduino interpreter testing",
  "created": "2025-09-16",
  "

  "seeds": {
    "base_seed": 12345,
    "millis_start": 17807,
    "micros_start": 17807000,
    "analog_multiplier": 37,
    "analog_offset": 42,
    "digital_pattern": "odd_high"
  },

  "timing_functions": {
    "millis": {
      "algorithm": "incremental",
      "start_value": 17807,
      "increment_per_call": 100,
      "description": "Increments by 100ms per call to simulate time progression"
    },
    "micros": {
      "algorithm": "incremental",
      "start_value": 17807000,
      "increment_per_call": 100000,
      "description": "Increments by 100000Âµs (100ms) per call, synchronized with millis"
    }
  },

  "pin_functions": {
    "digitalRead": {
      "algorithm": "pin_parity",
      "formula": "(pin % 2) == 1 ? 1 : 0",
      "description": "Odd pins return HIGH (1), even pins return LOW (0)"
    },
    "analogRead": {
      "algorithm": "pin_based_deterministic",
      "formula": "(pin * 37 + 42) % 1024",
      "description": "Deterministic formula based on pin number, range 0-1023"
    }
  },

  "sensor_functions": {
    "pulseIn": {
      "algorithm": "pin_based_timing",
      "base_value": 1500,
      "formula": "base_value + (pin * 10)",
      "description": "Returns pulse duration based on pin number"
    },
    "random": {
      "algorithm": "lcg_deterministic",
      "seed": 12345,
      "multiplier": 1664525,
      "increment": 1013904223,
      "modulus": 4294967296,
      "description": "Linear Congruential Generator for reproducible random values"
    }
  },

  "request_id_generation": {
    "algorithm": "deterministic_counter",
    "format": "{function}_{counter:06d}",
    "description": "Sequential counter instead of timestamp+random for reproducibility"
  },

  "validation_settings": {
    "tolerance": {
      "timing_drift_ms": 50,
      "analog_variance": 10,
      "description": "Acceptable variance when comparing cross-platform results"
    },
    "normalization": {
      "normalize_request_ids": true,
      "normalize_timestamps": true,
      "normalize_timing_values": true,
      "description": "Which fields to normalize during validation"
    }
  },

  "implementation_notes": {
    "javascript": {
      "file": "/src/javascript/ASTInterpreter.js",
      "functions_to_update": [
        "arduinoMillis",
        "arduinoMicros",
        "arduinoDigitalRead",
        "arduinoAnalogRead",
        "arduinoRandom"
      ]
    },
    "cpp": {
      "file": "/src/cpp/ASTInterpreter.cpp",
      "functions_to_update": [
        "getDeterministicMillisValue",
        "getDeterministicDigitalReadValue",
        "getDeterministicAnalogReadValue",
        "handleTimingOperation"
      ]
    },
    "test_regeneration": {
      "required_after_changes": true,
      "command": "cd src/javascript && node generate_test_data.js --all",
      "verification": "./build/validate_cross_platform 0 10"
    }
  }
}